sudo echo "
#!/bin/bash
if [[ \$1 == *.py ]] || [[ \$1 == *.rb ]]; then
    chmod +x \$1
    if [[ \$1 == *.py ]]; then
        c=\$(pep8 \$1 | wc -l)
        if [ \$c -ge \"1\" ]; then
            pep8 \$1
            exit
        fi
    fi
fi
git add \$1
git commit -m \"\$2\"
git push
" >> /usr/bin/g
sudo chmod +x /usr/bin/g
